<div class="cart">
    <ul>
        {{#each productsInCart}}
  
            <li>
                <img src="{{product.product_image}}">
                <p>{{product.name}}</p>
                <p>{{product.price}}TL</p>
                <p>({{quantity}})</p>
      
            </li>

        {{/each}}
    </ul>
</div>
<div class="paymentSection">
    <h2>Order Summery</h2>
    <ul>
        {{#each productsInCart}}
        <li>({{quantity}}) {{product.name}} {{'\t'}} {{multiply quantity product.price}}TL</li>
        {{/each}}
    </ul>
    +
    _______________________________________________________
    <br>
    {{totalAmount}}TL
    <br> <br>
    <button type="submit">Go to Payment</button>
</div>



            



